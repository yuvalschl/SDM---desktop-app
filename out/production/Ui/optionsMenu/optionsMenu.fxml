      </Label>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="200.0">
         <children>
            <Button fx:id="homeButton" mnemonicParsing="false" onAction="#homeButtonAction" prefWidth="90.0" text="Home">
