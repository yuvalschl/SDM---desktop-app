                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="showItemsButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#showItemsAction" prefWidth="145.0" text="Show Items">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
