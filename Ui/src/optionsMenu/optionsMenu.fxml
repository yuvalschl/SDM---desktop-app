                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="addStoreButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addStoreAction" prefWidth="145.0" text="Add store">
